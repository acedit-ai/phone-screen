# WebSocket Server Configuration
NEXT_PUBLIC_WEBSOCKET_SERVER_URL=https://your-websocket-server.fly.dev

# Scenario Filtering (optional)
# Comma-separated list of scenario IDs to show in the UI
# If not set, all available scenarios will be shown
# Examples:
# NEXT_PUBLIC_ALLOWED_SCENARIOS=job-interview
# NEXT_PUBLIC_ALLOWED_SCENARIOS=job-interview,customer-service
# NEXT_PUBLIC_ALLOWED_SCENARIOS=public-speaking,language-learning

# For job interview phone screening deployment:
NEXT_PUBLIC_ALLOWED_SCENARIOS=job-interview

# Database Configuration
DATABASE_URL=your_database_url_here

# Twilio Configuration (for phone calls)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Optional: Cloudflare Turnstile (for bot protection)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# Optional: Rate Limiting
ENABLE_RATE_LIMITING=true 